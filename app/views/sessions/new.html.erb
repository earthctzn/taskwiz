<section class="main_view">
  <%= form_tag login_path do  %>

    <div class="page_title"> 
      <h1>Log in below: </h1>
    </div>

    <div class="alert">
      <h1><%= render "layouts/flash"%></h1>
    </div>

    <section id="one">
      <div class="inner">
        <article class="box">
          <header>

            <p><%= text_field_tag :email, "", class: "fields_with_errors", :placeholder => "Email" %></p>
            <p><%= password_field_tag :password, "", class: "fields_with_errors", :placeholder => "Password" %></p>

          </header>

          <footer>
            <%= submit_tag  %>
          </footer>
          <div>
            <%= link_to "Back", root_path  %>
          </div>
        </article>
      </div>
    </section>
</section>
  <% end %>
