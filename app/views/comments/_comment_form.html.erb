<section class="fields_with_errors">
<%= form_with model:[comment.task, comment], local: true do |form| %>

	<div class="page_title">
		<h1> Comment for Task number:  <%= params[:task_id]  %></h1>
	</div>

	<div class="page_title">
    <h1><%= render "layouts/errors", :comment => comment %></h1>
  </div>

	<div class="alert">
    <h1><%= render "layouts/flash" %></h1>
  </div>

  <section id="one" >
		<div class="inner">
			<article class="box">
				<header>

          <p><%= form.text_area :content, :placeholder => "Comment"%></p>
					
            
				</header>

				<footer>
					<%= form.submit  %>
			  </footer>
				<div><%= link_to "Back", user_tasks_path(current_user.id)  %></div>
			</article>
		</div>
  </section>
</section>
<% end %>