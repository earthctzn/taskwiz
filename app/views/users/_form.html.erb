<%= form_with model: @user, local: true do |f| %>
  <div>
    <%= f.label :admin, "Admin" %>
    <%= f.check_box :admin %>
  </div>
  <div >
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>
  <div >
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
  </div>
  <div >
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>   
  </div>
  <div >
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Submit" %>
  </div> 
  <div>
  <% if @user && @user.errors.any? %>
		<% @user.errors.full_messages.each do |errmsg| %>
			<p><%= errmsg %></p>
		<% end %>
	<% end %>
  </div>
<% end %>

  
  
