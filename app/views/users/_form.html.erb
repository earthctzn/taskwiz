<p><%= form_with model: @user do |f| %></p>
  <div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>   
  </div>
  <div>
    <%= f.label :confirm_password, "Confirm Password" %>
    <%= f.password_field :confirm_password %>
  </div>
  <%= f.submit "Create account" %>
<% end %>