<%= form_with model: [task.user, task], local: true do |form| %>
<div class="page_title"> Editing Task# <%= params[:task_id]  %></div>
<div class="page_title"><%= render "layouts/errors", :object => task %></div>
  <section id="one" class="fields_with_errors" >
		<div class="inner">
			<article class="box">
				<header>

          <p><%= form.text_field :title, :placeholder => "Title"%></p>
          <p><%= form.select "status", raw("<option>Please choose a status</option><option>To do</option><option>In Progress</option><option>Awaiting Response</option><option>Done</option>")%></p>
          <p><%= form.text_area :description, :placeholder => "Description" %></p>

				</header>

				<footer>
					<%= form.submit  %>
			  </footer>

			</article>
		</div>
  </section>

<% end %>