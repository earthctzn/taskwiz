<section id="one" >
  <div class="inner">
	  <article class="box">

		  <header>
			  <h2><%= task.title %> - <%= task.user.name %>  </h2>
			  <p><%= task.description %></p>
		  </header>

		  <div class="content">
			  <% task.comments.each do |comment| %>
          <p><%= comment.content %></p>
        <% end %>
		  </div>

		  <footer>
			  <p><%= link_to "Home", tasks_path %> | <%= link_to "New Task", new_task_path %> | <%= link_to "Edit Task", edit_task_path(task) %></p>
		  </footer>
      
	  </article>
  </div>
</section>